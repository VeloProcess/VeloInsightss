# Configuração MongoDB - VeloInsights
# Copie este arquivo para .env e configure suas variáveis

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
# Para MongoDB Atlas, use: mongodb+srv://username:password@cluster.mongodb.net

# Database
MONGODB_DATABASE=veloinsights

# API do %%pbx (será configurada quando disponível)
PBX_API_URL=https://api.pbx.com
PBX_API_KEY=your_api_key_here

# Configurações de Sincronização
SYNC_INTERVAL=86400000  # 24 horas em ms
SYNC_RETRY_ATTEMPTS=5
SYNC_RETRY_DELAY=5000   # 5 segundos

# Configurações de Log
LOG_RETENTION_DAYS=30
LOG_LEVEL=info

# Configurações de Monitoramento
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=300000  # 5 minutos em ms
